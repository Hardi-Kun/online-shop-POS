<%- include('../v_layout/head') %>
<!-- <link rel="stylesheet" href="/custom/sign-in.css"> -->

<body class="d-flex align-items-center py-4 bg-body-tertiary text-bg-dark">
    <link rel="stylesheet" href="/custom/layout-login.css">
    <main class="form-signin w-100 m-auto">
        <form method="post" action="/auth/proses-login" class="wrapper">
          <img class="mb-4" src="/image/keranjangshop.png" alt="" height="57">
          <h7>SakuraShop</h7><br>
          <% if (typeof notifikasi !== 'undefined') { %>
              <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <%= notifikasi %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
          <% } %>
          <h1 class="h3 mt-3 mb-3 fw-normal">Silakan masuk</h1>
      
          <div class="form-floating mb-2">
              <input type="email" class="form-control" name="form_email" placeholder="name@example.com">
              <label for="floatingInput">Alamat Email</label>
          </div>
          <div class="form-floating">
            <input type="password" class="form-control" name="form_password" placeholder="Password">
            <label for="floatingPassword">Kata Sandi</label>
          </div>
      
          <button class="btn btn-primary w-100 py-2" type="submit">Masuk</button>
        </form>
        <p class="mt-4 mb-3 text-body-secondary">&copy; 2024</p>
    </main>
</body>

<%- include('../v_layout/foot') %>